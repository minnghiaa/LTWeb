<style type="text/css">
    html{
        font-size: 15px;
        font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    body{
        background-color: dimgrey;
    }

    #container{
        border: 2px solid #ff0000;
        border-radius: 10px;
    }

    header{
        background-color: burlywood;
        border: 2px solid #000000;
        padding: 10px;
        display:flex;
        justify-content:space-between;
        align-items:center;
    }

    .logo img{
        height:70px;
    }

    nav ul{
        list-style-type:none;
        display:flex;
    }

    nav ul li{
        margin-left:20px;
        font-size:1.2rem;
    }

    nav ul li a{
        text-decoration: none;
        color: black;
        font-weight:bold;
    }

    section{
        background-color: floralwhite;
        min-height: 300px;
    }
</style>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>

<body>
    <div id=" container">
        <header>
            <div class="logo">
                <img src="~/Content/images/logo.jpg" />
            </div>

            <nav>
                <ul>
                    <li><a href="~/Home/TrangChu">Trang chủ</a></li>
                    <li><a href="~/Product/ProductDetail">Sản phẩm</a></li>
                    <li><a href="~/Product/ShoppingCart">Giỏ hàng</a></li>
                    <li><a href="~/Home/Contact">Liên hệ</a></li>
                </ul>
            </nav>
        </header>

        <section>
                @RenderBody()
        </section>

        <footer>
            Footer
        </footer>
    </div>
</body>
</html>
